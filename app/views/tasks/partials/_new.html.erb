<%= form_for @task, action: :create do |f| %>
    <p> 
        <%= f.label :title %>
        <%= f.text_field :title %><br />
    </p>
    <p>
        <%= f.label :definition %>
        <%= f.text_area :definition %>
    </p>
    <p>
        <%= f.label :state %>
        <%= f.check_box :state %>
    </p>
    <div class="actions">
        <%= f.submit 'Add' %>
    </div>
<% end %>