<div class="container-fluid new-element">
    <div class="row">
        <div class="col">
            <h2>New list</h2>
        </div>
    </div>
    <div class="container">
        <%= form_for @list, action: :create do |f| %>
            <div class="form-group row">
                <%= f.label :title, class: 'col-sm-1 col-form-label' %>
                <div class="col-sm-4">
                    <%= f.text_field :title, class: 'form-control form-control-sm', required: true %>
                </div>
            </div>
            <div class="form-group row">
                <%= f.label 'description', class: 'col-sm-1 col-form-label' %>
                <div class="col-sm-4">
                    <%= f.text_area :description, class: 'form-control form-control-sm', placeholder: 'Type something...' %>
                    <small class="form-text text-muted">Optional</small>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-5">
                    <%= f.submit "Add list", class: 'btn btn-success btn-lg btn-block' %>
                </div>
            </div>
        <% end %> 
    </div> 
</div>