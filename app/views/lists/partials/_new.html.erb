<div class="container-fluid area">
    <%= form_for @list, action: :create do |f| %>
        <div class="form-group row">
            <%= f.label :title, class: 'col-sm-1 col-form-label' %>
            <div class="col-sm-10">
                <%= f.text_field :title, required: true %>
            </div>
        </div>
        <div class="form-group row">
            <%= f.label :description, class: 'col-sm-1 col-form-label' %>
            <div class="col-sm-5">
                <%= f.text_area :description, placeholder: 'Optional...' %>
            </div>
        </div>
        <div class="actions">
            <%= f.submit "Create" %>
        </div>
    <% end %>
</div>