<div class="container-fluid edit-form">
    <div class="row">
        <div class="col">
            <h2>Edit list</h2>
        </div>
    </div>
    <div class="container">
        <%= form_for @list, action: :update do |f| %>
        <div class="form-group row">
            <%= f.label :title, class: 'col-sm-2 col-form-label' %>
            <div class="col-sm-7">
                <%= f.text_field :title, class: 'form-control form-control-sm' %>
            </div>
        </div>

        <div class="form-group row">
            <%= f.label :description, class: 'col-sm-2 col-form-label' %>
            <div class="col-sm-7">
                <%= f.text_area :description, class: 'form-control form-control-sm' %>
            </div>
        </div>

        <div class="row">
            <div class="col-9">
                <%= f.submit "Update", class: 'btn btn-success btn-block', title: 'Save changes' %>
            </div>
        </div>
        <% end %>
    </div>
</div>

